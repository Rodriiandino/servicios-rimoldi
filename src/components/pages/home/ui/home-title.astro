---
interface Props {
  title: string
  description: string
  link: string
  linkText: string
}

const { title, description, link, linkText } = Astro.props
---

<header
  class='w-full flex md:items-center justify-between flex-col md:flex-row'
>
  <div class='flex flex-col'>
    <h2 class='text-2 sm:text-3 tracking-wide'>
      {title}
    </h2>
    <p class='text-xs'>
      {description}
    </p>
  </div>
  <div>
    <a
      href={link}
      class='text-second-color hover:underline flex items-center gap-2 focus:outline-offset-4 focus:outline-2 group'
      aria-label={linkText}
    >
      {linkText}
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='24'
        height='24'
        fill='none'
        class='transition-transform group-hover:translate-x-1'
        ><path
          stroke='#F1961C'
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='m9 18 6-6-6-6'></path></svg
      >
    </a>
  </div>
</header>
