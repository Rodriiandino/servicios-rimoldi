---
interface props {
  title: string
  description: string
  link: string
  linkText: string
}

const { title, description, link, linkText } = Astro.props
---

<header
  class='w-full flex items-center justify-between flex-col md:flex-row gap-y-5 md:gap-y-0'
>
  <div class='flex flex-col'>
    <h2 class='text-2 sm:text-3 text-center md:text-left tracking-wide'>
      {title}
    </h2>
    <p class='text--2 md:text--1'>
      {description}
    </p>
  </div>
  <div>
    <a href={link} class='text-second-color hover:underline'>
      {linkText}
    </a>
  </div>
</header>
