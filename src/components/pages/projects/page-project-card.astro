---
import Calender from '@components/icons/project/calender.astro'
import Category from '@components/icons/project/category.astro'
import Location from '@components/icons/project/location.astro'
import { Image } from 'astro:assets'

interface Props {
  img: string
  imgAlt: string
  title: string
  description: string
  link: string
  location: string
  startDate: string
  endDate: string
  category: string
  index: number
}

const {
  img,
  imgAlt,
  title,
  description,
  link,
  location,
  startDate,
  endDate,
  category,
  index
} = Astro.props
---

<article
  class='bg-background-color max-w-[400px] rounded-10px overflow-hidden shadow-lg shadow-[#F1961C]/10 hover:shadow-[#F1961C]/20 transition-shadow duration-300 opacity-0'
  data-index={index}
  id='fade-in-up'
>
  <picture class='relative aspect-w-16 aspect-h-9'>
    <Image src={img} alt={imgAlt} width={400} height={260} />
    <div
      class='absolute inset-0 bg-gradient-to-t from-background-color to-transparent opacity-60'
    >
    </div>
  </picture>
  <div class='p-6'>
    <h3
      class='font-noto font-bold text-1 mb-2'
      transition:name={`project.title-${title}`}
    >
      {title}
    </h3>
    <div class='flex flex-col gap-2 text-xs mb-6'>
      <div
        class='flex items-center gap-2 text-xxs sm:text-xs'
        transition:name={`project.location-${title}`}
      >
        <Location />
        <p>{location}</p>
      </div>
      <div
        class='flex items-center gap-2 text-xxs sm:text-xs'
        transition:name={`project.date-${title}`}
      >
        <Calender />
        <p>{startDate} - {endDate}</p>
      </div>
      <div
        class='flex items-center gap-2 text-xxs sm:text-xs'
        transition:name={`project.category-${title}`}
      >
        <Category />
        <p>{category}</p>
      </div>
    </div>
    <p
      class='text-xs mb-6 line-clamp-2'
      transition:name={`project.description-${title}`}
    >
      {description}
    </p>
    <footer>
      <a
        href={link}
        class='text-second-color hover:underline flex items-center gap-2 focus:outline-offset-4 focus:outline-2 group'
        aria-label={'Ir a ' + title + ' para m치s informaci칩n'}
      >
        M치s informaci칩n
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          fill='none'
          class='transition-transform group-hover:translate-x-1'
          ><path
            stroke='#F1961C'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='m9 18 6-6-6-6'></path></svg
        >
      </a>
    </footer>
  </div>
</article>
